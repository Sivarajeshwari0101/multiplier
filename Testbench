module multiplier_4x4_tb;
  reg  [3:0] A, B;
  wire [7:0] P;

  multiplier_4x4 dut (.A(A), .B(B), .P(P));

  initial begin
    //$monitor("Time=%0t A=%b B=%b => P=%b (%0d)", $time, A, B, P, P);

    A = 4'b1011; B = 4'b0110; #10;  // 11 × 6 = 66
    A = 4'b1111; B = 4'b1111; #10;  // 15 × 15 = 225
    A = 4'b0101; B = 4'b0011; #10;  // 5 × 3 = 15
    A = 4'b1000; B = 4'b0100; #10;  // 8 × 4 = 32
    $finish;
  end
endmodule
